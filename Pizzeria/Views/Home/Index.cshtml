@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pizzeria da Gino</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <h1 class="display-3 text-center mt-3">Pizzeria da Gino</h1>
    <p class="text-center text-secondary pb-4">Benvenuti sul nostro sito! Qui potrete ordinare qualsiasi pizza desideriate, per poi gustarla comodamente a casa vostra!</p>
    <div class="container text-center">
        <div class="row mb-5">

            <div class="col card ms-5 me-2 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/MARGHERITA.2-600x450.jpg" alt="Pizza margherita">
                <div class="card-body bg-danger">
                    <h4 class="fw-bold bg-danger text-white pt-1">Margherita</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva<br><br/>
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">5,00€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/PROSCIUTTO-600x450.jpg" alt="Pizza prosciutto cotto">
                <div class="card-body bg-primary">
                    <h4 class="fw-bold bg-primary text-white pt-1">Prosciutto cotto</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, prosciutto cotto<br><br />
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">6,00€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 shadow border-light">
                <img max-width: 300p src="https://pizzeria2000.it/wp-content/uploads/2019/10/CAPRICCIOSA-1-600x450.jpg" alt="Pizza capricciosa">
                <div class="card-body bg-info">
                    <h4 class="fw-bold bg-info text-white pt-1">Capricciosa</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, prosciutto cotto, funghi, carciofi, salsiccia, olive<br><br />
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">7,00€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/QUATTRO-STAGIONI-600x450.jpg" alt="Pizza 4 stagioni">
                <div class="card-body bg-success">
                    <h4 class="fw-bold bg-success text-white pt-1">4 Stagioni</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva, prosciutto cotto, funghi, carciofi, salsiccia
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">7,50€</button>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col card ms-5 me-2 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/DIAVOLA-1-600x450.jpg" alt="Pizza diavola">
                <div class="card-body bg-danger">
                    <h4 class="fw-bold bg-danger text-white pt-1">Diavola</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, salamino piccante
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">6,50€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/BERGAMASCA-1-600x450.jpg" alt="Pizza bergamasca">
                <div class="card-body bg-primary">
                    <h4 class="fw-bold bg-primary text-white pt-1">Bergamasca</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, cotechino, grana 
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">7,50€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/ROBERTA-600x450.jpg" alt="Pizza Roberta">
                <div class="card-body bg-info">
                    <h4 class="fw-bold bg-info text-white pt-1">Roberta</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, funghi porcini, grana, rucola
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">6,50€</button>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 p-0 shadow border-light">
                <img max-width: 300px src="https://pizzeria2000.it/wp-content/uploads/2019/10/DELLA-CASA-1-600x450.jpg" alt="Pizza della casa">
                <div class="card-body bg-success">
                    <h4 class="fw-bold bg-success text-white pt-1">Della casa</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, prosciutto cotto, coppa, funghi porcini
                    </li>

                    <li class="list-group-item lh-lg">
                        <button type="button" class="btn btn-warning">7,00€</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

