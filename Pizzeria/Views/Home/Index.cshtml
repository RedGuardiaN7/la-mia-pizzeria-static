@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pizzeria da Gino</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <h1 class="display-3 text-center mt-3">Pizzeria da Gino</h1>
    <p class="text-center text-secondary">Benvenuti sul nostro sito! Qui potrete ordinare qualsiasi pizza desideriate, per poi gustarla comodamente a casa vostra!</p>
    <div class="container text-center">
        <div class="row ">

            <div class="col card ms-5 me-2 p-0 shadow border-light">
                <img src="https://simply-delicious-food.com/wp-content/uploads/2020/06/Grilled-Pizza-Margherita-3-300x300.jpg" alt="Pizza margherita">
                <div class="card-body bg-danger">
                    <h4 class="fw-bold bg-danger text-white pt-1">Margherita</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva, basilico
                    </li>

                    <li class="list-group-item lh-lg pt-0">
                        <p><b>5,00€</b>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 shadow border-light">
                <img max-width: 300px src="https://www.pizzaventura.com/wp-content/uploads/2020/03/pizza-cotto-e-funghi.jpg" alt="Pizza prosciutto e funghi">
                <div class="card-body bg-success">
                    <h4 class="fw-bold bg-success text-white pt-1">Prosciutto e funghi</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva, prosciutto cotto, funghi porcini
                    </li>

                    <li class="list-group-item lh-lg pt-0">
                        <p><b>7,00€</b>
                    </li>
                </ul>
            </div>

            <div class="col card mx-2 p-0 shadow border-light">
                <img src="https://www.pizzus.it/wp-content/uploads/2019/09/Pizzus_pizza-capricciosa-300x300.jpg" alt="Pizza capricciosa">
                <div class="card-body bg-info">
                    <h4 class="fw-bold bg-info text-white pt-1">Capricciosa</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva, carciofi, funghi porcini, prosciutto cotto, olive nere
                    </li>

                    <li class="list-group-item lh-lg pt-0">
                        <p><b>7,50€</b>
                    </li>
                </ul>
            </div>

            <div class="col card ms-5 me-2 p-0 shadow border-light">
                <img src="https://simply-delicious-food.com/wp-content/uploads/2020/06/Grilled-Pizza-Margherita-3-300x300.jpg" alt="Pizza margherita">
                <div class="card-body bg-danger">
                    <h4 class="fw-bold bg-danger text-white pt-1">Margherita</h4>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item py-4">
                        Pomodoro, mozzarella, olio extravergine d'oliva, basilico
                    </li>

                    <li class="list-group-item lh-lg pt-0">
                        <p><b>5,00€</b>
                </ul>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>

